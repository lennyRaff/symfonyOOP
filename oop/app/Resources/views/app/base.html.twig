<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="Content-Type" content="text/html"; charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/base.css') }}" type="text/css" rel="stylesheet" />
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
            <link href="{{ asset('bundles/app/css/app.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="site_container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset( 'bundles/app/js/thirdparty/jquery-1.11.2.min.js' ) }}" type="text/javascript"></script>
            <script src="{{ asset( 'bundles/app/js/thirdparty/handlebars-1.0.rc.1.min.js' ) }}" type="text/javascript"></script>
            <script src="{{ asset( 'bundles/app/js/main.js' ) }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
